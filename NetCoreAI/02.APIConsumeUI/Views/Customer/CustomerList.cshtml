@model List<_02.APIConsumeUI.DTO.ResaultCustomerDTO>
@{
	Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

















<div class="container">
	<br /><br />
	<table class=" table table-bordered"
		<tr>
			<th>#</th>
			<th>Customer NameSurname</th>
			<th>Customer Balance</th>
			<th>Delete</th>
			<th>Update</th> 
		</tr>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.CustomerId</td>
				<td>@item.CustomerName @item.CustomerSurname</td>
				<td>@item.CustomerBalance</td>
				<td><a href="/Customer/DeleteCustomer/@item.CustomerId" class=" btn btn-danger">Delete</a></td>
				<td><a href="/Customer/UpdateCustomer/@item.CustomerId" class=" btn btn-success">Update</a></td>
			</tr>
		}
		</table>
	<a href="/Customer/AddCustomer/" class=" btn btn-primary">New Customer Entry</a>
</div>